import requests
from bs4 import BeautifulSoup


URL = 'https://www.monster.com/jobs/search?q=software+engineer+internship&where=Maryland'
try: 
  page = requests.get(URL)
except:
  ("Error opening the URL")


soup = BeautifulSoup(page.content, 'html.parser');
results = soup.findAll('h3', attrs={'name' : 'card_companyname'})

print(results)


